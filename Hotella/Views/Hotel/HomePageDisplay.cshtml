@using Hotella.ViewModels
@model HotelsViewModel

@{
    ViewData["Title"] = "Home";
}

<header class="bg-primary text-white text-left py-5">
    <div class="container">
        <h1>Forget Busy Work, Start Your Next Vacation</h1>
        <p class="lead">Explore the best hotels for your next getaway</p>
        <a href="#" class="btn btn-light">SHOW ME NOW</a>
    </div>
</header>

<!-- Hotels Section -->
<section class="container my-5">
    <h2 class="text-center mb-4">Most Picked Hotels</h2>
    <div class="row">
        @foreach (var hotel in Model.Hotels)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow">
                    <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@hotel.Name</h5>
                        <p class="card-text">@hotel.City</p>
                        <a href="#" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        }
        
    </div>
</section>

